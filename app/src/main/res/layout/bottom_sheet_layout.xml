<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_rounded_yellow_2"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-60dp"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/produkName"
        android:textColor="@color/text"
        android:text="ICE YOGHURT YUZU"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/priceR"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-100dp"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        android:background="@drawable/square_rounded_4"
        android:textColor="@color/black"
        android:text="R/25K"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/priceL"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        android:background="@drawable/square_rounded_4"
        android:textColor="@color/black"
        android:text="L/25K"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/square_rounded_2"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:id="@+id/produkDesk"
                android:justificationMode="inter_word"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/text"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:id="@+id/produkImage"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-100dp" />
    </RelativeLayout>


</LinearLayout>